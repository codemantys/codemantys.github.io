    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/12.9.0/firebase-app.js";
        import { getFirestore, collection, getDocs, query, orderBy } from "https://www.gstatic.com/firebasejs/12.9.0/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyAWsW8NaC-fs50D1hXganYW9gPCDUXRaMc",
            authDomain: "lyteit.firebaseapp.com",
            projectId: "lyteit",
            storageBucket: "lyteit.firebasestorage.app",
            messagingSenderId: "173900972036",
            appId: "1:173900972036:web:1bd22a25176bf5a716b551"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        const trendingTopics = [
            { topic: "#BitcoinHalving", posts: "2.3K", icon: "ph-lightning" },
            { topic: "SEC vs Ripple", posts: "1.8K", icon: "ph-scales" },
            { topic: "Ethereum Upgrade", posts: "1.2K", icon: "ph-code" },
            { topic: "Memecoin Mania", posts: "4.1K", icon: "ph-rocket" },
            { topic: "Fed Decision", posts: "892", icon: "ph-chart-line-up" },
            { topic: "DeFi Summer", posts: "3.2K", icon: "ph-drop" }
        ];

        // Store expanded state for each post separately
        const expandedPosts = new Map();

        function showPopup(title, message) {
            document.getElementById('popupTitle').textContent = title;
            document.getElementById('popupMessage').textContent = message;
            document.getElementById('popup').classList.add('show');
        }

        function truncateContent(content, limit = 150) {
            if (!content) return '';
            if (content.length <= limit) return content;
            return content.substring(0, limit) + '...';
        }

        // Toggle read more for a specific post - targets ONLY the clicked post
        window.toggleReadMore = function(postId, isFeatured = false, event) {
            // Stop event from bubbling up
            if (event) {
                event.stopPropagation();
            }
            
            const currentState = expandedPosts.get(postId) || false;
            expandedPosts.set(postId, !currentState);
            
            // Find ONLY this specific post's elements
            const postElement = document.getElementById(`post-${postId}`);
            if (!postElement) return;
            
            const contentElement = postElement.querySelector('.post-content');
            const readMoreBtn = postElement.querySelector('.read-more-btn');
            
            if (!contentElement || !readMoreBtn) return;
            
            const fullContent = contentElement.getAttribute('data-full-content');
            const isExpanded = expandedPosts.get(postId);
            const limit = isFeatured ? 150 : 100;
            
            if (isExpanded) {
                contentElement.textContent = fullContent;
                readMoreBtn.innerHTML = 'Show less <i class="ph ph-arrow-up"></i>';
            } else {
                contentElement.textContent = truncateContent(fullContent, limit);
                readMoreBtn.innerHTML = 'Read more <i class="ph ph-arrow-down"></i>';
            }
        };

        function renderTrending() {
            const trendingEl = document.getElementById('trendingTopics');
            trendingEl.innerHTML = trendingTopics.map(item => `
                <div class="trending-item">
                    <i class="ph ${item.icon}"></i>
                    <span>${item.topic}</span>
                    <span class="trending-count">• ${item.posts}</span>
                </div>
            `).join('');
        }

        async function loadPosts() {
            const featuredEl = document.getElementById('featuredSection');
            const newsListEl = document.getElementById('newsList');

            featuredEl.innerHTML = '<div class="loading"><i class="ph ph-spinner ph-spin"></i><br>Loading latest news...</div>';
            newsListEl.innerHTML = '';

            try {
                const q = query(collection(db, 'posts'), orderBy('timestamp', 'desc'));
                const snapshot = await getDocs(q);
                
                const posts = [];
                snapshot.forEach(doc => {
                    const data = doc.data();
                    console.log('Post data:', { id: doc.id, ...data });
                    posts.push({ id: doc.id, ...data });
                });

                if (posts.length === 0) {
                    featuredEl.innerHTML = '<div class="loading"><i class="ph ph-newspaper"></i><br>No news yet. Check back soon!</div>';
                    return;
                }

                // Filter featured posts
                const featuredPosts = posts.filter(post => post.featured === true);
                console.log('Featured posts:', featuredPosts.length);
                
                // Pick random featured post, or random any post if no featured
                let featured;
                if (featuredPosts.length > 0) {
                    featured = featuredPosts[Math.floor(Math.random() * featuredPosts.length)];
                } else {
                    featured = posts[Math.floor(Math.random() * posts.length)];
                }
                
                // All other posts
                const otherPosts = posts.filter(post => post.id !== featured.id);

                // Featured post display
                const isFeaturedExpanded = expandedPosts.get(featured.id) || false;
                const featuredContent = featured.content || '';
                const displayFeaturedContent = isFeaturedExpanded 
                    ? featuredContent 
                    : truncateContent(featuredContent, 150);

                featuredEl.innerHTML = `
                    <div class="featured-card" id="post-${featured.id}">
                        <img src="${featured.image}" class="featured-img" onerror="this.src='https://images.unsplash.com/photo-1639762681485-074b7f938ba0?auto=format&fit=crop&q=80&w=1000'">
                        <h1 class="featured-title">${featured.title}</h1>
                        <div class="meta-info">
                            <span><i class="ph ph-clock"></i> ${featured.time || 'Just now'}</span>
                            <i class="ph ph-bookmark-simple" style="cursor: pointer;"></i>
                        </div>
                        ${featuredContent ? `
                            <div class="featured-content">
                                <span class="post-content" data-full-content="${featuredContent.replace(/"/g, '&quot;')}">${displayFeaturedContent}</span>
                                ${featuredContent.length > 150 ? `
                                    <button class="read-more-btn" onclick="toggleReadMore('${featured.id}', true, event)">
                                        ${isFeaturedExpanded ? 'Show less' : 'Read more'} 
                                        <i class="ph ${isFeaturedExpanded ? 'ph-arrow-up' : 'ph-arrow-down'}"></i>
                                    </button>
                                ` : ''}
                            </div>
                        ` : ''}
                        ${featured.featured ? '<div style="margin-top: 10px;"><span style="background: #fab00520; color: #fab005; padding: 4px 12px; border-radius: 20px; font-size: 0.7rem;">⭐ Featured</span></div>' : ''}
                    </div>
                `;

                // News list display
                if (otherPosts.length === 0) {
                    newsListEl.innerHTML = '';
                    return;
                }

                let html = '';
                otherPosts.forEach(post => {
                    const isExpanded = expandedPosts.get(post.id) || false;
                    const content = post.content || '';
                    const displayContent = isExpanded ? content : truncateContent(content, 100);

                    html += `
                        <div class="news-item" id="post-${post.id}">
                            <img src="${post.image}" class="news-item-img" onerror="this.src='https://images.unsplash.com/photo-1621761126064-fdd80772bc22?auto=format&fit=crop&q=60&w=200'">
                            <div class="news-item-content">
                                <div class="news-item-title">${post.title}</div>
                                ${content ? `
                                    <div style="color: #8a8d91; font-size: 0.8rem; margin: 5px 0;">
                                        <span class="post-content" data-full-content="${content.replace(/"/g, '&quot;')}">${displayContent}</span>
                                        ${content.length > 100 ? `
                                            <button class="read-more-btn" style="font-size: 0.7rem; padding: 2px 0;" onclick="toggleReadMore('${post.id}', false, event)">
                                                ${isExpanded ? 'less' : 'more'}
                                            </button>
                                        ` : ''}
                                    </div>
                                ` : ''}
                                <div class="meta-info">
                                    <span><i class="ph ph-clock"></i> ${post.time || 'Just now'}</span>
                                    <i class="ph ph-bookmark-simple" style="cursor: pointer;"></i>
                                </div>
                                ${post.featured ? '<span style="background: #fab00520; color: #fab005; padding: 2px 8px; border-radius: 20px; font-size: 0.6rem;">Featured</span>' : ''}
                            </div>
                        </div>
                    `;
                });

                newsListEl.innerHTML = html;

            } catch (error) {
                console.error('Error:', error);
                featuredEl.innerHTML = '<div class="loading" style="color: #ff5252;"><i class="ph ph-warning"></i><br>Error loading news. Please refresh.</div>';
            }
        }

        // Event listeners
        function setupEventListeners() {
            // Back to top
            document.getElementById('backToTop').addEventListener('click', () => {
                document.getElementById('scrollableContent').scrollTo({ top: 0, behavior: 'smooth' });
            });

            document.getElementById('logo').addEventListener('click', () => {
                document.getElementById('scrollableContent').scrollTo({ top: 0, behavior: 'smooth' });
            });

            // Newsletter
            document.getElementById('subscribeBtn').addEventListener('click', () => {
                const email = document.getElementById('newsletterEmail').value;
                if (email) {
                    showPopup('Thanks!', `We'll notify you at ${email} when our newsletter launches.`);
                } else {
                    showPopup('Almost there!', 'Please enter your email address.');
                }
            });

            // App buttons
            document.getElementById('appStoreBtn').addEventListener('click', () => showPopup('Coming Soon', 'Our iOS app is in development.'));
            document.getElementById('playStoreBtn').addEventListener('click', () => showPopup('Coming Soon', 'Our Android app is in development.'));

            // Footer links
            document.getElementById('aboutLink').addEventListener('click', () => showPopup('About lyteit.com', 'Your trusted source for crypto news.'));
            document.getElementById('privacyLink').addEventListener('click', () => showPopup('Privacy Policy', 'Full policy coming soon.'));
            document.getElementById('termsLink').addEventListener('click', () => showPopup('Terms of Service', 'Terms coming soon.'));
            document.getElementById('contactLink').addEventListener('click', () => showPopup('Contact', 'Email: hello@lyteit.com'));

            // Close popup
            document.getElementById('closePopup').addEventListener('click', () => {
                document.getElementById('popup').classList.remove('show');
            });

            document.getElementById('popup').addEventListener('click', (e) => {
                if (e.target === document.getElementById('popup')) {
                    document.getElementById('popup').classList.remove('show');
                }
            });

            // Search
            document.getElementById('searchInput').addEventListener('input', (e) => {
                console.log('Searching:', e.target.value);
            });

            // Trending items click
            document.querySelectorAll('.trending-item').forEach(item => {
                item.addEventListener('click', () => {
                    const topic = item.querySelector('span').textContent;
                    document.getElementById('searchInput').value = topic;
                    console.log('Searching for:', topic);
                });
            });
        }

        // Initialize
        renderTrending();
        setupEventListeners();
        loadPosts();
    </script>
</body>
</html>
